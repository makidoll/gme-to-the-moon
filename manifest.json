{
	"manifest_version": 2,
	"name": "GME to the moon",
	"version": "1.1.1",
	"description": "Conveniently shows the price of GME on your toolbar",
	"homepage_url": "https://github.com/makitsune/gme-to-the-moon",
	"icons": {
		"16": "icons/rocket-0deg-16px.png",
		"32": "icons/rocket-0deg-32px.png",
		"320": "icons/rocket-0deg-320px.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/rocket-0deg-16px.png",
			"32": "icons/rocket-0deg-32px.png",
			"320": "icons/rocket-0deg-320px.png"
		}
	},
	"background": {
		"scripts": ["dist/background.js"],
		"persistent": true
	},
	"permissions": ["https://finance.yahoo.com/quote/GME/"],
	"browser_specific_settings": {
		"gecko": {
			"id": "gme-to-the-moon@maki.cafe"
		}
	}
}
